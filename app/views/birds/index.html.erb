<h1 class="text-center">All Birds</h1>

<div class="container bg-image">
		<div class = "row">
			<div class="col-7">
				<div class="row">
        <% @birds.each do |bird| %>
        <div class="col list-inline">
					<% unless bird.image.key.nil? %>
						<%= cl_image_tag(bird.image.key, width: 250, height: 250, crop: :thumb, gravity: :face) %>
						<% else %>
						<%= cl_image_tag("placeholderduckling_apfxok", width: 250, height: 250, crop: :thumb, gravity: :face) %>
					<% end %>
          <strong><li> <%= bird.name %> </li></strong>
					<li> <strong>Breed: </strong> <%= bird.breed %></li>
					<li> <strong>Price/day: </strong> <%= bird.price %></li>
					<li> <strong>Location: </strong> <%= bird.location %></li>
          <%= link_to "View", bird_path(bird) %><br>
          </div>
        <% end %>
          </div><br><br>
        </div>

				<div class="col-5 sticky-top">
					<div style="width: 100%; height: 600px;"
						data-controller="mapbox"
						data-mapbox-markers-value="<%= @markers.to_json %>"
						data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
				</div>
    </div><br><hr>
		<%= link_to "Add bird",  new_bird_path, class: "btn btn-outline-primary text-center" %> 
</div>
