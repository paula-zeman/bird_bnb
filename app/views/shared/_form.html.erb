<div class="container">
			<%= simple_form_for [@bird] do |f| %>
				<%= f.input :name, placeholder: 'Write your comment here!' %>
				<%= f.input :breed, collection: ["Albatross", "Chicken", "Emu", "Flamingo", "Owl", "Parrot", "Penguin", "Turkey"], prompt: "Select type"  %>
				<%= f.input :price %>
				<%= f.input :location %>
				<%= f.input :image, as: :file %>
				<%= f.submit class: 'btn btn-primary' %>
			<% end %>
</div>
